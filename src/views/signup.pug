extends base.pug

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg CREATE YOUR ACCOUNT!
            form#signup.form.form--signup
                div.form__group
                    label.form__label(for="name") Your name
                    input.form__input#name(type="text" name="name"  required)
                div.form__group
                    label.form__label(for="email") Email address
                    input.form__input#email(type="email" name="email" placeholder="you@example.com" required)
                div.form__group.ma-bt-md
                    label.form__label(for="password") Password
                    input.form__input#password(type="password" name="password" placeholder="••••••••" required)
                div.form__group.ma-bt-md
                    label.form__label(for="passwordConfirm") Confirm password
                    input.form__input#passwordConfirm(type="password" name="passwordConfirm" placeholder="••••••••" required)
                div.form__group
                    button.btn.btn--green(type="submit") Sign Up
