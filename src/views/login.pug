extends base.pug

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form#login.form.form--login
                div.form__group
                    label.form__label(for="email") Email address
                    input.form__input#email(type="email" name="email" placeholder="you@example.com" required)
                div.form__group.ma-bt-md
                    label.form__label(for="password") Password
                    input.form__input#password(type="password" name="password" placeholder="••••••••" required)
                div.form__group
                    button.btn.btn--green(type="submit") Login
